<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SettingsPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/SettingsPageConstraint"
        android:layout_width="match_parent"
        android:background="@drawable/party_brainiac_background_vanilla_zoom"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/BuSettingsPageToMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            style="@style/myBackButton"
            android:text="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/BuSettingsGameplay"
            style="@style/myGameModeButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gameplay"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <Button
            android:id="@+id/BuSettingsAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myGameModeButtons"
            android:text="Audio"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/BuSettingsGameplay"
            app:layout_constraintStart_toStartOf="@+id/BuSettingsGameplay"
            app:layout_constraintTop_toBottomOf="@+id/BuSettingsGameplay" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>